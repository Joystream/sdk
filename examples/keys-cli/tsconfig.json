{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "ts",
    "baseUrl": ".",
    "outDir": "js",
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@joystream/sdk-core/*": ["../../packages/core/src/*/index"]
    }
  },
  "include": ["ts"],
  "references": [{ "path": "../../packages/core" }]
}
